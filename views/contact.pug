extends base.pug

block scripts
    script(src='/index.js')
block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    div.container
        h1 Registration Form
        form(action="/contact",method="post",class="myForm")
            input(type="text",class="myInput",name="name",placeholder="Name") 
            input(type="phone",class="myInput",name="phone",placeholder="Phone No.") 
            input(type="email",class="myInput",name="email",placeholder="Email") 
            input(type="address",class="myInput",name="address",placeholder="Address") 
            input(type="desc",class="myInput",name="desc",placeholder="Degree") 
            input(type="desc",class="myInput",name="College/Institution",placeholder="College/Institution") 
            
            button(class="btn")
            
                | Submit
        